[alias]
	a = add
	b = branch
	c = commit
	ca = commit --amend
	ch = checkout
	chb = checkout -b
	co = config
	d = !bash -c 'git diff $@ | <%= File.join ENV['HOME'], '.process_git_diff' %>' -
	ds = !bash -c 'git diff --staged $@ | <%= File.join ENV['HOME'], '.process_git_diff' %>' -
	f = fetch
	l = log
	m = merge
	p = push
	pl = pull
	r = rebase
	rs = reset
	rsh = reset HEAD
	s = status
	sh = !bash -c 'git show $@ | <%= File.join ENV['HOME'], '.process_git_diff' %>' -
[color]
	ui = auto
[core]
	autocrlf = input
	excludesfile = <%= File.join ENV['HOME'], '.gitignore' %>
[github]
	user = <%= print 'github.user: '; STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print 'github.token: '; STDOUT.flush; STDIN.gets.chomp %>
[merge]
	ff = false
[user]
	name = <%= print 'user.name: '; STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print 'user.email: '; STDOUT.flush; STDIN.gets.chomp %>
